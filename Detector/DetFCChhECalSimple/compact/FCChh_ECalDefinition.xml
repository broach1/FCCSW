<detector id="5" name="ECalBarrel" type="EmCaloBarrel" readout="BarECal_Readout">
  <sensitive type="EcalCalorimeterSD"/> 
  <!--<calibration_hits label="false"/>-->
  <dimensions rmin="BarCryoECal_rmin" rmax="BarCryoECal_rmax" dz="BarCryoECal_dz" vis="ecal_envelope"/>
  <cryostat id="1" name="ECAL_Cryo" material="Aluminum" >
    <dimensions rmin="BarCryoECal_rmin" rmax="BarCryoECal_rmax" dz="BarCryoECal_dz" thickness="10*mm" />
  </cryostat>
  <calorimeter id="1" name="EM_barrel" >
    <dimensions rmin="EMBarrel_rmin" rmax="EMBarrel_rmax" dz="EMBarrel_dz" nphi="248" />
    <active_layers thickness="3*mm" material="LAr" sensitive="true" vis="ecal_active_vis" />
    <passive_layers thickness="2*mm" material="Lead" sensitive="false" vis="ecal_passive_vis" />
    <caloZmodule thickness="50.0*mm" vis="ecal_caloZmodule_vis" />
  </calorimeter>
</detector>
